
<!DOCTYPE html>
<html lang="es"> 
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRGaming</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body style="background: #1A1A2E" class="text-white">

    <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #0F3460">
        <div class="container">
            <a class="navbar-brand text-white" href="#">CRGaming</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="background-color: #FF1D42">
                <i class="text-white fa fa-gamepad"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active m-1">
                        <a  style="border-color: #FF1D42" class="text-white nav-link text-center btn-block btn" href="@Url.Action("Create","Register")">Registrarme <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active m-1">
                        <a style="background-color: #FF1D42" class="text-white nav-link text-center btn-block  btn" href="@Url.Action("Index","Register")">Acceder <span class="sr-only">(current)</span></a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    @if (ViewBag.Title == "Registro")
    {
<div class="card card-img-top  bg-transparent border-0">
    <img class="img-fluid" style="" src="~/Imagenes/Grupo 98.png" alt="Alternate Text" />
    <div class="container card-body text-left h1"
         style="">
        Unete a la comunidad menos toxica de internet
    </div>
</div>

    }
    else
    {
        <div class="card border-0" style="margin-top: 4rem;
        background-color: #16213E">
            <div class="card-body text-center text-white h1">
                Noticias
            </div>
        </div>
        <div class="container card-body text-center text-white h1">
            Noticias / Actualizaciones / Conferencias y mas
        </div>
    }


    <div class="container card-footer bg-transparent ">

        <ul class="nav justify-content-center">
            <li class="nav-item"> <a href="#" class="mr-1 nav-link btn btn-outline-primary text-white">PC</a> </li>
            <li class="nav-item"> <a href="#" class="mr-1 nav-link  btn btn-outline-primary text-white">PlayStation <i class="fa fa-playstation"></i></a> </li>
            <li class="nav-item"> <a href="#" class="mr-1 nav-link  btn btn-outline-primary text-white">Xbox</a> </li>
            <li class="nav-item"> <a href="#" class="mr-1 nav-link  btn btn-outline-primary text-white">Nintendo</a> </li>
            <li class="nav-item"> <a href="#" class="mr-1 nav-link  btn btn-outline-primary text-white">Android e IOS</a> </li>
        </ul>

    </div>
    <div class="" style="margin-top:1rem">
        @RenderBody()
        <hr />
        <footer class="text-center ">
            <p>&copy; Copyright @DateTime.Now.Year - CRGaming</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
